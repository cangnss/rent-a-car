<div class="container d-flex flex-row shadow bg-body p-3">
  <div class="row">
    <div class="col-3 me-3">
      <%= image_tag url_for(@user.avatar), class: 'img-fluid w-100 rounded-3' %>
      <p class="mt-2"><%= @user.name %> <%= @user.surname %></p>
      <p><%= @user.birthday %></p>
      <p><%= @user.role %></p>
      <%= link_to "Update Profile", edit_user_registration_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-8">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Rented a Car</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Favorite Car</button>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active mt-3" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">There will be car list</div>
        <div class="tab-pane fade mt-3" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">There will be favorite car</div>
      </div>
    </div>
  </div>
</div>

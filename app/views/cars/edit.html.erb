<h1>Cars#edit</h1>
<p>Find me in app/views/cars/edit.html.erb</p>
<div class="container">
    <div class="row">
        <%= form_with model: @car do |f| %>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_name, "Car Name:", class: "form-label" %>
                    <%= f.text_field :car_name, class: "form-control" %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_brand, "Car Brand:", class: "form-label" %>
                    <%= f.text_field :car_brand, class: "form-control" %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_model, "Car Model:", class: "form-label" %>
                    <%= f.text_field :car_model, class: "form-control" %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_type, "Car Type:", class: "form-label" %>
                    <%= f.text_field :car_type, class: "form-control" %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_km, "Car Km:", class: "form-label" %>
                    <%= f.text_field :car_km, class: "form-control" %>
                </div>
            </div>
            <div class="mb-3 w-50">
                <%= f.submit "Update Car", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
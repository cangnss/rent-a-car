<div class="container">
    <div class="row">
        <%= form_with model: @car do |f| %>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :name, "Car Name:", class: "form-label" %>
                    <%= f.text_field :name, class: "form-control" %>
                    <% @car.errors.full_messages_for(:name).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :brand, "Car Brand:", class: "form-label" %>
                    <%= f.text_field :brand, class: "form-control" %>
                    <% @car.errors.full_messages_for(:brand).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :model, "Car Model:", class: "form-label" %>
                    <%= f.text_field :model, class: "form-control" %>
                    <% @car.errors.full_messages_for(:model).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :case_type, "Car Type:", class: "form-label" %>
                    <%= f.text_field :case_type, class: "form-control" %>
                    <% @car.errors.full_messages_for(:case_type).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :km, "Car Km:", class: "form-label" %>
                    <%= f.text_field :km, class: "form-control" %>
                    <% @car.errors.full_messages_for(:km).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :images, "Car Images:", class: "form-label" %>
                    <%= f.file_field :images, multiple: true, class: "form-control" %>
                    <% @car.errors.full_messages_for(:images).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="mb-3 w-50">
                <%= f.submit "Add Car", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
<h1>Cars#new</h1>
<p>Find me in app/views/cars/new.html.erb</p>
<div class="container">
    <div class="row">
        <%= form_with model: @car do |f| %>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_name, "Car Name:", class: "form-label" %>
                    <%= f.text_field :car_name, class: "form-control" %>
                    <% @car.errors.full_messages_for(:car_name).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_brand, "Car Brand:", class: "form-label" %>
                    <%= f.text_field :car_brand, class: "form-control" %>
                    <% @car.errors.full_messages_for(:car_brand).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_model, "Car Model:", class: "form-label" %>
                    <%= f.text_field :car_model, class: "form-control" %>
                    <% @car.errors.full_messages_for(:car_model).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_type, "Car Type:", class: "form-label" %>
                    <%= f.text_field :car_type, class: "form-control" %>
                    <% @car.errors.full_messages_for(:car_type).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_km, "Car Km:", class: "form-label" %>
                    <%= f.text_field :car_km, class: "form-control" %>
                    <% @car.errors.full_messages_for(:car_km).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="col">
                <div class="mb-3 w-50">
                    <%= f.label :car_image, "Car Image:", class: "form-label" %>
                    <%= f.file_field :car_image, class: "form-control" %>
                    <% @car.errors.full_messages_for(:car_image).each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            </div>
            <div class="mb-3 w-50">
                <%= f.submit "Add Car", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
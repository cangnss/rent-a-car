<h2>Forgot your password?</h2>

<div class="container w-50 bg-body shadow p-5">
  <div class="row d-flex justify-content-center align-items-center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col w-50 field">
        <%= f.label :email, class: 'fw-bold form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="col text-start my-4 actions">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-sm btn-outline-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

